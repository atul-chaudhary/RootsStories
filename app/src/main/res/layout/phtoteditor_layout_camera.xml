<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout_for_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:src="@drawable/undo" />

    <ImageView
        android:id="@+id/erase_solid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eraser_solid"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/text_for_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:text="Aa"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/paint_brush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_for_photo"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/paint_brush" />

    <ImageView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/paint_brush"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/label" />


</RelativeLayout>